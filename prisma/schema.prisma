generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  userId   String   @unique
  userName String
  roles    String[]
}

model SpinHistories {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique
  userName    String
  rewardValue Int
  spinTime    DateTime @default(now())
}
